{
  "port": "COM22",
  "baud": 115200,
  "read_timeout_s": 0.2,
  "break_seconds_between_tests": 0,
  "send_zero_on_exit": true,

  "flow_sensor": { "backend": "fluigent", "channel": 0, "sample_rate_hz": 25 },

  "analysis": {
    "drift": {
      "compare_sweeps_by": "steady_end_of_step",
      "step_end_window_s": 0.5
    }
  },

  "tests": [
    { "type": "constant", "frequency_hz": 500, "duration_s": 180, "repeat": 1, "settle_ms": 0 },

    { "type": "sweep", "start_hz": 100, "end_hz": 1000, "steps": 10, "step_duration_s": 2.0, "repeat": 1, "settle_ms": 0 },

    { "type": "constant", "frequency_hz": 500, "duration_s": 0.5, "repeat": 1, "settle_ms": 0 },
    { "type": "sweep", "start_hz": 100, "end_hz": 1000, "steps": 10, "step_duration_s": 2.0, "repeat": 1, "settle_ms": 0 },

    { "type": "constant", "frequency_hz": 500, "duration_s": 30, "repeat": 1, "settle_ms": 0 },
    { "type": "sweep", "start_hz": 100, "end_hz": 1000, "steps": 10, "step_duration_s": 2.0, "repeat": 1, "settle_ms": 0 },

    { "type": "constant", "frequency_hz": 500, "duration_s": 120, "repeat": 1, "settle_ms": 0 },
    { "type": "sweep", "start_hz": 100, "end_hz": 1000, "steps": 10, "step_duration_s": 2.0, "repeat": 1, "settle_ms": 0 }
  ]
}
